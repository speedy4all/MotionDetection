<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/titlemotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        android:height="30dp"
        android:autoText="false"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fefdff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlemotion"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_main_window"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSensorLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/textApplication"
        android:layout_marginTop="84dp"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:padding="12dp"
        android:shadowColor="#e7e6e9"
        android:singleLine="false"
        android:text="@string/btn_sensor_layout"
        android:textColorHighlight="#ffffff" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titlemotion"
        android:layout_alignLeft="@+id/titlemotion"
        android:layout_alignRight="@+id/titlemotion"
        android:layout_alignStart="@+id/titlemotion"
        android:layout_below="@+id/btnSensorLayout"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:enabled="true"
        android:padding="12dp"
        android:singleLine="false"
        android:text="Call Buddy" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:enabled="true"
        android:padding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:shadowColor="#e7e6e9"
        android:text="Emergency Call" />

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btnGetAllSensors"
        android:layout_alignLeft="@id/btnGetAllSensors"
        android:layout_alignRight="@id/btnGetAllSensors"
        android:layout_alignStart="@id/btnGetAllSensors"
        android:layout_below="@id/btnGetAllSensors"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:padding="12dp"
        android:text="@string/btn_start_service" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btnStartService"
        android:layout_alignLeft="@id/btnStartService"
        android:layout_alignRight="@id/btnStartService"
        android:layout_alignStart="@id/btnStartService"
        android:layout_below="@id/btnStartService"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:padding="12dp"
        android:text="@string/btn_stop_service" />

    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnStopService"
        android:layout_alignLeft="@+id/btnStopService"
        android:layout_alignRight="@+id/btnStopService"
        android:layout_alignStart="@+id/btnStopService"
        android:layout_below="@+id/btnStopService"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:padding="12dp"
        android:text="@string/btn_location" />


    <TextView
        android:id="@+id/textPleasedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:padding="15dp"
        android:text="@string/home_down_txt"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fffbf7"
        android:textSize="15dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnGetAllSensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:width="100dp"
        android:background="@drawable/button_selector"
        android:clickable="true"
        android:enabled="true"
        android:padding="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:shadowColor="#e7e6e9"
        android:text="@string/btn_get_all_sensors" />

</RelativeLayout>
